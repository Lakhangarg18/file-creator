<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <script src="https://cdn.tailwindcss.com"></script>
    <title>Document</title>
  </head>
  <body>
    <div class="main w-full min-h-screen bg-zinc-900">
      <div class="form p-10 text-white">
        <form action="/create" method="post">
          <input
            type="text"
            name="title"
            class="block w-full rounded-md outline-none px-5 py-2 bg-zinc-800"
            placeholder="Enter the title"
          />
          <textarea
            name="details"

            class="block w-full rounded-md outline-none px-5 py-2 resize-none bg-zinc-800 mt-4"
            placeholder="Enter the details"
          ></textarea>
          <input
            type="submit"
            class="mt-3 bg-blue-600 px-5 py-2 rounded-md "
            value="Submit"
          />
        </form>
      </div>
      <div class="tasks flex gap-3 flex-wrap p-10">
        <% if (files.length > 0) { %>
          <% files.forEach((file) => { %>
            <div class="task min-w-72 px-3 py-4 bg-zinc-800">
              <h1 class="text-white text-3xl tracking-lighter">
                <%= file %>
              </h1>
              <div class="mt-2 flex gap-11">
                <a class="text-blue-500" href="/files/<%=file%>">Read More</a>
                <a class=" text-pink-500" href="/edit/<%=file%>">Edit name</a>

              </div>
              
            </div>
          <% }) %>
        <% } else { %>
          <h3 class="text-zinc-800">No tasks yet</h3>
        <% } %>
      </div>
    </div>
  </body>
</html>
